<?xml version="1.0"?>
<ruleset name="OpenEMR Coding Standard">
  <description>Coding Standard for OpenEMR PHP files</description>

  <exclude-pattern>*/build/*</exclude-pattern>
  <exclude-pattern>*/sites/*</exclude-pattern>
  <exclude-pattern>*/.git/*</exclude-pattern>
  <rule ref="PEAR"/>
  <rule ref="Squiz">
  <rule ref="Generic"/>

  <rule ref="Generic.Files.LineEndings">
    <properties>
      <property name="eolChar" value="\r\n"/>
    </properties>
  </rule>
</ruleset>
